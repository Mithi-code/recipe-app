
<div class = 'container  pt-4' >
<div class = "container btn_div">
  <%= link_to 'Add food', new_user_food_path(params[:user_id]), class: 'btn btn-primary text-light text-decoration-none' %>
</div>


<table class="table table-striped table-hover mt-5">
  <thead>
    <tr>
     <th scope="col">#</th>
      <th scope="col">Food</th>
      <th scope="col">Measurement Unit</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Action</th>
    </tr>
  </thead>

  <tbody>
   <% @foods.each.with_index do |food, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td> <%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= '$' + food.price.to_s %></td>
        <td>
          <% if can? :destroy, food %>
            <%= button_to 'Delete', "/users/#{current_user.id}/foods/#{food.id}", method: :delete, class: 'btn btn-primary text-light' %>
          <%end%>
        </td>
      </tr>
    <%end%> 
  </tbody>
  </table>
</div>
