 <table class="table table-striped table-hover mt-5">
  <thead>
    <tr>
     <th scope="col">#</th>
      <th scope="col">Food</th>
      <th scope="col">Quantity</th>
      <th scope="col">Value</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>

  <tbody>
   <% @foods.each.with_index do |food, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td> <%= food.name %></td>
        <td><%= quantity = Random.rand(3...9).to_s %>g</td>
        <td><%= '$' + ( quantity.to_i * food.price.to_i).to_s %></td>
        <td class = 'd-flex justify-content-around'>
        <% if can? :destroy, food%>
          <%= button_to 'Modify', edit_user_recipe_path(current_user.id, food.id), class: 'btn btn-primary text-light' %>
          <%= button_to 'Delete', "/users/#{current_user.id}/foods/#{food.id}", method: :delete, class: 'btn btn-primary text-light' %>
        <%else%>
          <%= button_to "Modify", user_shops_path(current_user.id) , class: 'btn btn-primary text-light disabled' %>
          <%= button_to "Delete", user_shops_path(current_user.id), class: 'btn btn-primary text-light disabled' %>
        <%end%>
       </td>
      </tr>
    <%end%> 
  </tbody>
  </table>