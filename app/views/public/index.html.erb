<% @recipes.each do |recipe| %>
<% if recipe.public || recipe.user_id == current_user.id%>
  <div class="card mb-4 border-5 p-3 m-3 bg-success bg-gradient" style="min-width: 540px;">
     <div class="row g-0">
        <div class="col-md-4">
           <h3 class="m-3"><%= link_to recipe.name, user_recipe_path(current_user.id, recipe.id) %></h3>
           <h3 class="m-3"><%= recipe.user.name %></h3>
        </div>
        <div class="col-md-8">
           <div class="card-body">
           <p class="card-text">
           Tottal food item: <%= Food.total_food(current_user.id)%><br>
           $ <%= Food.food_money(current_user.id) %>
           </p>
        </div>
     </div>
  </div>
  </div> 
  <%end%>     
<% end %>