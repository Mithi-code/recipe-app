<% @recipes.each do |recipe| %>
  <div class="card mb-4 border-5 p-3 m-3 bg-success bg-gradient" style="min-width: 540px;">
     <div class="row g-0">
        <div class="col-md-4">
           <h3 class="m-3"><%= recipe.name %></h3>
           <%= button_to 'Remove',"/users/#{current_user.id}/recipes/#{recipe.id}", method: :delete, class: "btn btn-info m-3" %>
        </div>
        <div class="col-md-8">
           <div class="card-body"
           <p class="card-text">
              <%= recipe.description %>
           </p>
        </div>
     </div>
  </div>
  </div>
<% end %>
