<% @recipes.each do |recipe| %>
   <% if can? :read, recipe%>
     <div class="card mb-4 border-5 p-3 m-3 bg-success bg-gradient" style="min-width: 540px;">
        <div class="row g-0">
           <div class="col-md-4">
              <h3 class="m-3"><%= link_to recipe.name, user_recipe_path(current_user.id, recipe.id) %></h3>
              <% if can? :destroy, recipe %>
               <%= button_to 'Remove',"/users/#{current_user.id}/recipes/#{recipe.id}", method: :delete, class: "btn btn-info m-3" %>
              <%end%>
           </div>
           <div class="col-md-8">
              <div class="card-body">
                 <p class="card-text"> <%= recipe.description %> </p>
              </div>
           </div>
        </div>
     </div>
   <%end%>
   <% end %> 
<%= link_to 'Add Recipes', new_user_recipe_path(params[:user_id]), class:"btn btn-info m-3"%>