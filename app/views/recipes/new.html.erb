 <div class="min-vh-80">
 <h2  class="form-group w-25" style = "padding-left: 10%" >New Recipe<h2>
<%= form_with model: @recipe, url:  user_recipes_path, scope: :recipe, html: {class: "recipe-form-c"} do |form| %>  
      <div class="form-group w-25 p-5">
  <%= form.text_field :name, placeholder: "Title", required: true, class: "form-control" %><br>
  <%= form.text_field :preparation_time, placeholder: "Preparation Time", required: true, class: "form-control" %><br>
  <%= form.text_field :cooking_time, placeholder: "Cooking Time", required: true, class: "form-control" %><br>
      <%= form.text_area :description, placeholder: "Description...", rows: 10, required: true,  class: "form-control" %>
  <%= form.submit "Cretae Recipe", class: "btn btn-primary" %>
  </div>
<% end %> 
</div>
</div>